{
  "name": "list-artifacts",
  "version": "1.0.0",
  "description": "List a build artifacts that can be used by subsequent workflow steps",
  "main": "src/index.ts",
  "repository": {
    "url": "https://github.com/yakubique/list-artifacts"
  },
  "scripts": {
    "test": "yarn build && node ./action/index.js",
    "build": "yarn clean && tsc --project ./tsconfig.json",
    "clean": "rimraf -- action",
    "release": "yarn clean && ncc build -m src/index.ts -o action"
  },
  "author": "Vladimir <opa-oz> Levin",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^2.1.2",
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@yakubique/atils": "^0.0.1",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.11.19",
    "@vercel/ncc": "^0.38.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
